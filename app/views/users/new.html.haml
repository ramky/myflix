%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      %fieldset
        = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6" do |f|
          %header
            %h1 Register
          %fieldset
            = f.email_field :email, label: "Email Address"
            = f.password_field :password
            = f.text_field :full_name, label: "Full Name"
            = hidden_field_tag :invitation_token, @token
          %fieldset.actions.control-group
            .controls
              %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_PUBLISHABLE_KEY']}" data-image="/square-image.png" data-name="MyFlix" data-description="MyFlix sign up charge ($9.95)" data-amount="995")
