%section.admin_add_video.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [:admin, @video], html: { class: 'form-horizontal' } do |f|
        %ul.nav.nav-tabs
          %li
            %a(href="") Recent Payments
          %li.active
            %a(href="") Add a New Video
        %fieldset
          = f.text_field :title, label: "Title"
          = f.select :category_ids, options_for_select(Category.all.map {|c| [c.name, c.id]}), label: "Category"
          = f.text_area :description, rows: 8, label: "Description"
          = f.file_field :large_cover_image, class: "btn btn-file"
          = f.file_field :small_cover_image, class: "btn btn-file"
        %br
        %fieldset.form-group.action
          .controls
            %input(type="submit" value="Add Video" class="btn btn-default")
